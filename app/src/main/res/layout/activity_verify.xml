<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".verifyActivity"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/v_banner_img"
        android:src="@drawable/banner1" />
    <TextView
        android:id="@+id/v_cap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See the OTP I Sent you..."
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/v_banner_img"/>

    <EditText
        android:id="@+id/et_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_cap"
        android:layout_marginTop="25dp"
        android:paddingHorizontal="20dp"
        android:layout_centerHorizontal="true"
        android:inputType="phone"
        android:maxLength="6"
        android:drawablePadding="10dp"
        android:hint="Enter the OTP"
        android:drawableLeft="@drawable/ic_otp"/>

    <Button
        style="@style/TextAppearance.AppCompat.Widget.Button"
        android:id="@+id/btn_verify"
        android:text="VERIFY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_otp"
        android:layout_marginTop="25dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:background="@android:color/white"/>

</RelativeLayout>